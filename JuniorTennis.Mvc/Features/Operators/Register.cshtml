@model JuniorTennis.Mvc.Features.Operators.RegisterViewModel

@{
    ViewData["Title"] = "管理ユーザー - 管理ユーザー登録";
}

<h2>管理ユーザー登録</h2>
<div class="single-column-form">
    <div class="horizontal-items right">
        <a class="button-link" asp-action="Index">戻る</a>
    </div>
    <form asp-action="Register">
        <div class="form-item">
            <label asp-for="SelectedRoleName"></label>
            <select asp-for="SelectedRoleName" asp-items="Model.RoleNames"></select>
        </div>
        <div class="form-item">
            <label asp-for="Name"></label>
            <input asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
        <div class="form-item">
            <label asp-for="EmailAddress"></label>
            <input asp-for="EmailAddress" />
            <span asp-validation-for="EmailAddress"></span>
        </div>
        <div class="form-item">
            <label asp-for="LoginId"></label>
            <input asp-for="LoginId" />
            <span asp-validation-for="LoginId"></span>
        </div>
        <div class="form-item">
            <div class="horizontal-items">
                <button class="button-primary" type="submit">登録</button>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
