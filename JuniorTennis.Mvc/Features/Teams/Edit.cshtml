@model JuniorTennis.Mvc.Features.Teams.EditViewModel

@{
    ViewData["Title"] = "団体管理 - 編集";
}

<h2>編集</h2>
<div class="single-column-form">
    <form asp-action="Edit">
        <input type="hidden" asp-for="OriginalMailAddress" />
        <input type="hidden" asp-for="TeamCode" />
        <div class="form-item">
            <label asp-for="TeamCode"></label>
            <span>@Model.TeamCode</span>
        </div>
        <div class="form-item">
            <label asp-for="TeamType"></label>
            <span>@Model.TeamType</span>
        </div>
        <div class="form-item">
            <label asp-for="TeamName"></label>
            <input asp-for="TeamName" />
            <span asp-validation-for="TeamName"></span>
        </div>
        <div class="form-item">
            <label asp-for="TeamAbbreviatedName"></label>
            <input asp-for="TeamAbbreviatedName" />
            <span asp-validation-for="TeamAbbreviatedName"></span>
        </div>
        <div class="form-item">
            <label asp-for="RepresentativeName"></label>
            <input asp-for="RepresentativeName" />
            <span asp-validation-for="RepresentativeName"></span>
        </div>
        <div class="form-item">
            <label asp-for="RepresentativeEmailAddress"></label>
            <input asp-for="RepresentativeEmailAddress" />
            <span asp-validation-for="RepresentativeEmailAddress"></span>
            @if (Model.IsDuplicated)
            {
                <span>既に使用されているメールアドレスです</span>
            }
        </div>
        <div class="form-item">
            <label asp-for="TelephoneNumber"></label>
            <input asp-for="TelephoneNumber" />
            <span asp-validation-for="TelephoneNumber"></span>
        </div>
        <div class="form-item">
            <label asp-for="Address"></label>
            <p>大阪府</p>
            <input asp-for="Address" />
            <span asp-validation-for="Address"></span>
        </div>
        <div class="form-item">
            <label asp-for="CoachName"></label>
            <input asp-for="CoachName" />
            <span asp-validation-for="CoachName"></span>
        </div>
        <div class="form-item">
            <label asp-for="CoachEmailAddress"></label>
            <input asp-for="CoachEmailAddress" />
            <span asp-validation-for="CoachEmailAddress"></span>
        </div>
        <div class="form-item">
            <div class="horizontal-items">
                <button class="button-primary" type="submit">登録</button>
            </div>
        </div>
    </form>
</div>
